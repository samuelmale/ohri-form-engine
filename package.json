{
  "name": "@openmrs/ohri-form-engine",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "openmrs develop --sources 'packages/esm-*-app/'",
    "ci:publish": "lerna publish from-package --yes",
    "ci:prepublish": "lerna publish from-package --no-git-reset --yes --dist-tag next",
    "ci:release": "lerna version --no-git-tag-version",
    "ci:prerelease": "lerna version prerelease --no-git-tag-version --yes",
    "verify": "lerna run lint && lerna run test && lerna run typescript",
    "prettier": "prettier \"packages/**/src/**/*\" --write"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.12.13",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^9.5.0",
    "@types/jest": "^25.2.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "browserslist-config-openmrs": "^1.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "css-loader": "^3.6.0",
    "dayjs": "^1.8.36",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "husky": "^3.1.0",
    "i18next": "^19.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "jest-cli": "^26.4.2",
    "openmrs": "next",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "style-loader": "^1.2.1",
    "typescript": "^4.0.3"
  }
}
